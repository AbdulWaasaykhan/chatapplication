rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to read user profiles, but only owner can write
    match /Users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat rooms accessible only to participants
    match /chat_rooms/{chatRoomId} {
      allow read, write: if request.auth != null &&
                         request.auth.uid in resource.data.participants;

      // Messages accessible only to chat room participants
      match /messages/{messageId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chat_rooms/$(chatRoomId)).data.participants;
      }
    }
  }
}
