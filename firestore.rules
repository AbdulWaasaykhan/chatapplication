rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles are readable by anyone, but only the owner can write.
    match /Users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for chat rooms
    match /chat_rooms/{chatRoomId} {
      // A user can READ a chat room document if they are a participant.
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;

      // A user can CREATE a chat room if their UID is in the 'participants' list of the NEW document.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;

      // A user can UPDATE a chat room (e.g., last message timestamp) if they are already a participant.
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;

      // Messages can be read or written only by participants of the parent chat room.
      match /messages/{messageId} {
        allow read, write: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/chat_rooms/$(chatRoomId)).data.participants;
      }
    }
  }
}